<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <article class="timeline">
  	<h4>Pending Request:</h4>
  	 <ul class="posts">
      <% @pending.each do |invitee|%>
        <li><%= invitee.name %> </li>
      <% end %>
    </ul>
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
